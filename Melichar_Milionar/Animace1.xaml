<UserControl x:Class="Melichar_Milionar.Animace1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Melichar_Milionar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Storyboard x:Key="sbAnimateImage">
            <DoubleAnimation Storyboard.TargetName="obrazek1" Storyboard.TargetProperty="(Canvas.Left)" To="500" Duration="0:0:5.0" AutoReverse="True" RepeatBehavior="Forever" />
            <DoubleAnimation Storyboard.TargetName="obrazek1" Storyboard.TargetProperty="(Canvas.Top)" To="300" Duration="0:0:1.0" AutoReverse="True" RepeatBehavior="Forever" />
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <Canvas>
            <Image x:Name="obrazek1" Source="data\cechA.png" Canvas.Top="0" Canvas.Left="0"/>
        </Canvas>
    </Grid>
    
</UserControl>
